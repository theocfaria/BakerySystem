<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefWidth="420.0" spacing="15.0" styleClass="dialog-root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gtsystems.bakerysystem.controllers.AddPaymentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="dialog-title" text="ADICIONAR NOVO PAGAMENTO" />

        <HBox spacing="10.0">
            <children>
                <TextField fx:id="input" onAction="#confirmPayment" promptText="Digite o valor do pagamento..." styleClass="dialog-text-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="allButton" mnemonicParsing="false" onAction="#setAll" styleClass="dialog-button-secondary" text="Tudo" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>

        <Label fx:id="errorLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="form-error-label" text="O valor do pagamento é maior que a dívida." visible="false" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" styleClass="dialog-button-secondary" text="Cancelar" />
                <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmPayment" styleClass="dialog-button-primary" text="Confirmar" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
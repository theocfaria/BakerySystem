<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="199.0" prefWidth="347.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gtsystems.bakerysystem.controllers.ApplicationController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="28.0" layoutY="28.0" prefHeight="38.0" prefWidth="290.0" style="-fx-border-color: BLACK; -fx-border-width: 0.5px;" text="ADICIONAR NOVO PAGAMENTO">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="input" layoutX="28.0" layoutY="81.0" onAction="#confirmPayment" prefHeight="48.0" prefWidth="229.0" promptText="Digite o valor do pagamento...">
            <font>
                <Font size="18.0" />
            </font>
        </TextField>

        <Label fx:id="errorLabel" alignment="CENTER" layoutX="28.0" layoutY="133.0" prefHeight="18.0" prefWidth="290.0" style="-fx-text-fill: red;" text="">
            <font>
                <Font name="System Italic" size="12.0" />
            </font>
        </Label>

        <Button fx:id="cancelButton" layoutX="152.0" layoutY="157.0" mnemonicParsing="false" onAction="#cancel" prefHeight="32.0" prefWidth="71.0" text="Cancelar">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <Button fx:id="confirmButton" layoutX="240.0" layoutY="157.0" mnemonicParsing="false" onAction="#confirmPayment" prefHeight="32.0" prefWidth="78.0" text="Confirmar">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
      <Button fx:id="allButton" layoutX="266.0" layoutY="81.0" mnemonicParsing="false" onAction="#setAll" prefHeight="48.0" prefWidth="55.0" text="Tudo">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
    </children>
</AnchorPane>

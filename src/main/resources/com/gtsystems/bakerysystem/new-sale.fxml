<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="220.0" prefWidth="350.0" styleClass="dialog-root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gtsystems.bakerysystem.controllers.NewSaleController">
    <children>
        <Label styleClass="dialog-title" text="ADICIONAR NOVA COMPRA" />
        <TextField fx:id="input" onAction="#confirmSale" promptText="Digite o valor da compra..." styleClass="dialog-text-field">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </TextField>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" styleClass="dialog-button-secondary" text="Cancelar" />
                <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmSale" styleClass="dialog-button-primary" text="Confirmar" />
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
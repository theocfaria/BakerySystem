<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gtsystems.bakerysystem.controllers.MainController">

    <top>
        <HBox styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="title-label" text="GT SYSTEM" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="userListButton" mnemonicParsing="false" onAction="#openUserListPanel" styleClass="nav-button" text="LISTA DE USUÁRIOS" />
            </children>
        </HBox>
    </top>

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>

                <VBox alignment="TOP_CENTER" maxWidth="600.0" spacing="20.0" StackPane.alignment="TOP_CENTER">
                    <children>

                        <HBox fx:id="searchContainer" styleClass="search-container">
                            <children>
                                <TextField fx:id="searchField" onAction="#searchUser" promptText="Digite o nome do cliente..." styleClass="search-bar" HBox.hgrow="ALWAYS" />
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchUser" styleClass="search-button" text="Pesquisar" />
                            </children>
                        </HBox>

                        <VBox fx:id="resultContainer" styleClass="card" visible="false">
                            <children>
                                <Label fx:id="resultLabel" styleClass="result-label" text="Nome: Cliente Exemplo&#10;Total: R$ 1.234,56" />
                                <HBox alignment="CENTER_RIGHT" spacing="20.0" styleClass="button-row">
                                    <children>
                                        <Button fx:id="addSaleButton" mnemonicParsing="false" onAction="#openNewSalePanel" styleClass="card-button-success" text="NOVA COMPRA" />
                                        <Button fx:id="payButton" mnemonicParsing="false" onAction="#openNewPaymentPanel" styleClass="card-button-primary" text="PAGAR CONTA" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <HBox fx:id="clientNotFoundContainer" alignment="CENTER" styleClass="card" visible="false">
                            <children>
                                <Label fx:id="clientNotFoundLabel" styleClass="not-found-label" text="Cliente não encontrado." />
                                <Pane HBox.hgrow="ALWAYS" />
                                <Button fx:id="createClientButton" mnemonicParsing="false" onAction="#openNewClientPanel" styleClass="card-button-secondary" text="Criar Novo Cliente" />
                            </children>
                        </HBox>

                    </children>
                    <StackPane.margin>
                        <Insets top="80.0" />
                    </StackPane.margin>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
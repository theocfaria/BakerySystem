<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER_LEFT" styleClass="list-item-row" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gtsystems.bakerysystem.controllers.UserListItemController">
    <children>
        <VBox>
            <children>
                <Label fx:id="clientNameLabel" styleClass="list-item-title" text="Nome do Cliente" />
                <Label fx:id="clientBalanceLabel" styleClass="list-item-subtitle" text="Saldo: R$ 0,00" />
            </children>
        </VBox>
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="editButton" mnemonicParsing="false" onAction="#editUser" styleClass="list-button-edit" text="Editar" />
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteUser" styleClass="list-button-delete" text="Excluir" />
    </children>
</HBox>
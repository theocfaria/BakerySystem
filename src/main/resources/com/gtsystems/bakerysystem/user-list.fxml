<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gtsystems.bakerysystem.controllers.UserListController">
    <top>
        <HBox styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBack" styleClass="nav-button" text="&lt; Voltar" />
                <Label styleClass="title-label" text="Lista de Clientes">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="userListContainer" alignment="TOP_CENTER" spacing="10.0" styleClass="list-container">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
            <BorderPane.margin>
                <Insets bottom="20.0" left="100.0" right="100.0" top="20.0" />
            </BorderPane.margin>
        </ScrollPane>
    </center>
</BorderPane>